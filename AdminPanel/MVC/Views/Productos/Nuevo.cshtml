<div class="container px-4">
    <h1 class="mt-4">Nuevo producto</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item active">Rimini Wines</li>
    </ol>

    <!-- Card para formulario de nuevo producto -->
    <div class="card shadow-sm">
        <div class="card-header">
            <h5 class="card-title mb-0">Nuevo producto</h5>
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post" enctype="multipart/form-data">
                <div class="form-group mb-3">
                    <label for="category" class="form-label">Categoría</label>
@*                     <select class="form-control" id="category" name="category" required>
                        <option value="">Seleccione una categoría</option>
                        @foreach (var category in Model.Categories)
                        {
                            <option value="@category.Id">@category.Name</option>
                        }
                    </select> *@
                </div>

                <div class="form-group mb-3">
                    <label for="productName" class="form-label">Nombre del Producto</label>
                    <input type="text" class="form-control" id="productName" name="productName" required placeholder="Ingresa el nombre del producto" />
                </div>

                <div class="form-group mb-3">
                    <label for="productDescription" class="form-label">Descripción</label>
                    <textarea class="form-control" id="productDescription" name="productDescription" required placeholder="Ingresa la descripción del producto"></textarea>
                </div>

                <div class="form-group mb-3">
                    <label for="productPrice" class="form-label">Precio</label>
                    <input type="number" class="form-control" id="productPrice" name="productPrice" required placeholder="Ingresa el precio del producto" step="0.01" />
                </div>

                <div class="form-group mb-4">
                    <label for="productImage" class="form-label">Cargar Imagen</label>
                    <input type="file" class="form-control" id="productImage" name="productImage" accept="image/*" required />
                </div>

                <!-- Botón centrado -->
                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-primary">Agregar producto</button>
                </div>
            </form>
        </div>
    </div>
</div>
