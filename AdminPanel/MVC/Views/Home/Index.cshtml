@{
    Layout = null; // O establece tu Layout si lo necesitas
}
<title>Iniciar Sesión</title>
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MVC.styles.css" asp-append-version="true" />
    <title>@ViewBag.Title</title>
</head>
<style>
    body {
        background-color: #f5f5f5;
    }

    .login-container {
        min-width:400px;
        max-width: 800px;
        padding: 30px;
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
    }

    .form-control:focus {
        box-shadow: none;
        border-color: #4a90e2;
    }

    .btn-primary {
        background-color: #4a90e2;
        border-color: #4a90e2;
    }

        .btn-primary:hover {
            background-color: #357ABD;
            border-color: #357ABD;
        }

    .login-header {
        font-size: 24px;
        font-weight: bold;
        margin-bottom: 20px;
        text-align: center;
    }

    .login-footer {
        text-align: center;
        margin-top: 20px;
    }
</style>
<body>
    <div class="d-flex justify-content-center align-items-center vh-100">
        <div class="login-container">
            <div class="login-header">
                Login
            </div>
            <form method="post" action="/Account/Login">
                <div class="mb-3">
                    <label for="email" class="form-label">Email o Usuario</label>
                    <input type="email" class="form-control" id="email" name="Email" required>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" class="form-control" id="password" name="Password" required>
                </div>
                <div class="mb-3 form-check">
                    <input type="checkbox" class="form-check-input" id="rememberMe" name="RememberMe">
                    <label class="form-check-label" for="rememberMe">Recordar mi usuario</label>
                </div>
                <button type="submit" class="btn btn-primary w-100">Login</button>
            </form>
@*             <div class="login-footer">
                <a href="#">Forgot password?</a>
            </div> *@
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
